<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 【用户】 -->
<mapper namespace="com.wisewin.backend.dao.SundryDAO">
    <resultMap id="aboutUs" type="com.wisewin.backend.entity.bo.SundryBO"  >

        <result column="image_url"  property="imageUrl"  />

    </resultMap>
    <!--查询信息-->
    <select id="selectAbout" resultMap="aboutUs">
        select id,content,image_url from ce_about_us
    </select>
    <!--查询信息-->
    <select id="selectid" resultType="java.lang.Integer">
        select count(id) from ce_about_us
    </select>
    <!--通过id查询用户信息-->
    <select id="selectAboutById" resultMap="aboutUs">
        select id,content,image_url from ce_about_us
        WHERE id=#{id}
    </select>

    <!--修改-->
    <update id="updateAboutUs" parameterType="com.wisewin.backend.entity.bo.SundryBO">
        UPDATE ce_about_us
        SET
            <if test="content!=null and content!='' " >
                content = #{content},
            </if>
                update_time = now()


    </update>
    <!--增加-->
    <insert id="insertAboutUs" parameterType="com.wisewin.backend.entity.bo.SundryBO">
      INSERT INTO ce_about_us (content,create_time,create_user_id) VALUES
      (#{content},now(),#{createUserId})


    </insert>
    <!--删除-->

</mapper>