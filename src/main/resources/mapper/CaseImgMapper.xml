<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wisewin.backend.dao.CaseImgDAO">

    <!--根据id查询-->
  <select id="queryCaseImg" parameterType="java.lang.String" resultType="com.wisewin.backend.entity.bo.CaseImgBO">
      select * from ce_case_img where id=#{id}
  </select>

    <!--添加-->
    <insert id="insertCaseImg" parameterType="com.wisewin.backend.entity.bo.CaseImgBO">
      insert into ce_case_img(img_url,status,create_time,update_time,create_user_id,update_user_id) VALUES
      (#{imgUrl},#{status},#{createTime},#{updateTime},#{createUserId},#{updateUserId})
    </insert>

    <!--根据id修改-->
    <update id="updateCaseImg" parameterType="com.wisewin.backend.entity.bo.CaseImgBO">
        update ce_case_img set
        <if test="imgUrl != null and imgUrl != ''">
        img_url = #{imgUrl},
        </if>
        <if test="status != null and status != ''">
            status = #{status},
        </if>
        <if test="updateTime != null and updateTime != ''">
            update_time = #{updateTime},
        </if>
        <if test="updateUserId != null and updateUserId != ''">
            update_user_id = #{updateUserId}
        </if>
        where id = #{id}
    </update>
</mapper>