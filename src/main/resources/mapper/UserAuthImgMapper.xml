<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wisewin.backend.dao.UserAuthImgDAO">

    <select id="getUserAuth" resultType="com.wisewin.backend.entity.bo.UserAuthImgBO">
        select * from ce_user_auth_img
        <where>
            <if test="userId!=null and userId!=''">
                and user_id=#{userId}
            </if>
            <if test="status!=null and status!=''">
                and status=#{status}
            </if>
        </where>
    </select>

    <update id="updUserAuth" parameterType="com.wisewin.backend.entity.bo.UserAuthImgBO">
        update ce_user_auth_img
        set
        status=#{status},notice=#{notice},admin_id=#{adminId},update_time=now()
        where
        id=#{id}
    </update>

</mapper>