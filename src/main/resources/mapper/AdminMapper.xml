<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 【管理员】 -->
<mapper namespace="com.wisewin.backend.dao.AdminDAO">
    <!--根据手机号查找管理员信息-->
    <select id="queryAdminInfoByMobile" parameterType="java.lang.String"
            resultType="com.wisewin.backend.entity.bo.AdminBO">
        select ce_admin.*,ce_role.id as  roleId
            from  ce_admin left  join ce_role  on  ce_role.id=ce_admin.role_id where  phone_number=  #{phoneNumber}
    </select>

    <sql id="limit">
        limit #{pageOffset},#{pageSize}
    </sql>

    <!--添加管理员信息(管理員注冊)-->
    <insert id="adminRegister" parameterType="com.wisewin.backend.entity.bo.AdminBO" useGeneratedKeys="true"
            keyProperty="id">
          insert into ce_admin
         (name,phone_number,password,create_time,status,role_id,update_time)
         values
         ( #{name},#{phoneNumber},#{password},now(),#{status},#{roleId},now())
    </insert>

    <!-- 查找角色名是否注册过  -->
    <select id="selectCountByRoleName" parameterType="String" resultType="Integer">
        select count(role_name) from ce_role where role_name = #{roleName}
    </select>
    <!-- 查找手机号是否注册过  -->
    <select id="selectCountByMobile" parameterType="String" resultType="int">
       select count(id) from ce_admin where phone_number = #{phoneNumber}
    </select>

    <!-- 添加角色信息  -->
    <insert id="addRole" parameterType="com.wisewin.backend.entity.bo.RoleBO" useGeneratedKeys="true"
            keyProperty="id">
        insert into ce_role
        (role_name,create_time,update_time)
        values
        ( #{roleName},now(),now())
    </insert>

    <!-- 给角色赋予权限  -->
    <insert id="addRoleMenu">
        insert into ce_role_menu
        (role_id,menu_id)
        values
        <foreach collection="menuIdArr" item="menuId" separator=",">
            (#{roleId},#{menuId})
        </foreach>
    </insert>
    <!--  根据角色id删除角色信息  -->
    <delete id="delRoleById" parameterType="Integer">
        delete from ce_role where
        <foreach collection="roleIds" item="roleId" separator="OR">
            id=#{roleId}
        </foreach>
    </delete>

    <!-- 下拉框展示 查询所有角色  -->
    <select id="getRoleList" resultType="com.wisewin.backend.entity.bo.RoleBO">
        SELECT id,role_name FROM ce_role
        <if test="status==null or status==''">
            where id!='1'
        </if>
    </select>

    <!-- 根据角色id删除对应的所有权限  -->
    <delete id="delRoleMenuByRoleId" parameterType="Integer">
        DELETE FROM ce_role_menu WHERE role_id=#{roleId}
    </delete>

    <!--查询角色下是否存在用户-->
    <select id="checkRoleUser" parameterType="java.lang.Integer" resultType="int">
           SELECT count(id) FROM ce_admin  WHERE  role_id =#{roleId}
    </select>
    <!--根据角色id修改角色名称  -->
    <select id="updateRoleNameByRoleId">
        UPDATE ce_role SET
        <if test="roleName !=null and roleName!=''">
            role_name=#{roleName},
        </if>
        update_time=now() WHERE id=#{roleId}
    </select>
    <!--根据角色名称查询角色信息  -->
    <select id="getRoleByName" resultType="com.wisewin.backend.entity.bo.RoleBO" parameterType="java.lang.String">
        select * from ce_role
        <if test="roleName!=null and roleName!=''">
            where role_name like '%${roleName}%'
        </if>
    </select>
    <!--根据角色id查询角色信息  -->
    <select id="getRoleById" resultType="com.wisewin.backend.entity.bo.RoleBO" parameterType="java.lang.Integer">
        select * from ce_role
        <if test="roleId!=null and roleId!=''">
            where id = #{roleId}
        </if>
    </select>
    <!--修改admin用户信息  -->
    <update id="updateAdminUser" parameterType="com.wisewin.backend.entity.bo.AdminBO">
        UPDATE ce_admin
        <set>
            <if test="name!=null and name!=''">`name`=#{name},</if>
            <if test="phoneNumber !=null and phoneNumber!='' ">`phone_number`=#{phoneNumber},</if>
            <if test="status!=null and status!=''">`status`=#{status},</if>
            <if test="roleId!=null and roleId!=''">`role_id`=#{roleId},</if>
            <if test="password!=null and password!=''">`password`=#{password},</if>
        </set>
        WHERE id=#{id}
    </update>
    <!--根据用户id删除信息  -->
    <delete id="delAdminById">
        DELETE FROM ce_admin WHERE
        <foreach collection="idArr" item="id" separator="OR">
            id=#{id}
        </foreach>
    </delete>
    <!--查询角色拥有的权限-->
    <select id="getMenuByRoleId" resultType="com.wisewin.backend.entity.bo.MenuBO" parameterType="java.lang.Integer">
        select me.*
        from ce_role_menu  rm
        inner join  ce_menu me
        on rm.menu_id=me.id
        where  rm.role_id=#{roleId}
    </select>

    <!--根据 用户id\角色id\用户名 查询用户信息-->
    <select id="getAdminByCond" parameterType="java.util.Map" resultType="com.wisewin.backend.entity.bo.AdminBO">
        select ce_admin.id,`name`,phone_number,role_id,role_name,ce_admin.create_time
        from ce_admin ,ce_role
        where role_id=ce_role.id
        <if test="userId!=null and userId!=''">
            and ce_admin.id=#{userId}
        </if>
        <if test="roleId!=null and roleId!=''">
            and role_id=#{roleId}
        </if>
        <if test="userName!=null and userName!=''">
            and `name` like '%${userName}%'
        </if>

        <include refid="adminLimit"/>
    </select>

    <sql id="adminLimit">
        limit #{pageNo},#{pageSize}
    </sql>

    <!--根据 用户id\角色id\用户名 查询用户信息总数-->
    <select id="getAdminCountByCond" parameterType="java.util.Map" resultType="java.lang.Integer">
        select count(*)
        from ce_admin,ce_role
        where role_id=ce_role.id
        <if test="id!=null and id!=''">
            and admin.id=#{id}
        </if>
        <if test="roleId!=null and roleId!=''">
            and role_id=#{roleId}
        </if>
        <if test="userName!=null and userName!=''">
            and `name` like '%${userName}%'
        </if>
    </select>

    <!--查询所有菜单-->
    <select id="getMenuList" resultType="com.wisewin.backend.entity.bo.MenuBO">
        select * from ce_menu
    </select>


</mapper>