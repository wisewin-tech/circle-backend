<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 【用户】 -->
<mapper namespace="com.wisewin.backend.dao.SundryDAO">

    <!--查询关于我们信息-->
    <select id="selectAbout" resultType="com.wisewin.backend.entity.bo.SundryBO">
        select * from ce_sundry WHERE name = '关于我们'
    </select>
    <!--查询关于我们信息-->
    <select id="selectid" resultType="java.lang.Integer">
        select count(id) from ce_sundry
    </select>
    <!--通过id查询关于我们信息-->
    <select id="selectAboutById" resultType="com.wisewin.backend.entity.bo.SundryBO">
        select id,content,image_url from ce_sundry
        WHERE id=#{id} AND name = '关于我们'
    </select>

    <!--修改关于我们-->
    <update id="updateAboutUs" parameterType="com.wisewin.backend.entity.bo.SundryBO">
        UPDATE ce_about_us
        SET
            <if test="content!=null and content!='' " >
                content = #{content},
            </if>
                update_time = now()


    </update>
    <!--增加关于我们-->
    <insert id="insertAboutUs" parameterType="com.wisewin.backend.entity.bo.SundryBO">
      INSERT INTO ce_about_us (content,create_time,create_user_id) VALUES
      (#{content},now(),#{createUserId})


    </insert>
    <!--删除-->

</mapper>