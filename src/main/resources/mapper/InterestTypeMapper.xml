<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wisewin.backend.dao.InterestTypeDAO">

    <!--添加兴趣分类-->
    <insert id="addInterestType" parameterType="com.wisewin.backend.entity.bo.InterestTypeBO">
        insert into
        ce_interest_type
        (type_name,create_time,create_user_id,update_time,update_user_id)
        values
        (#{typeName},now(),#{createUserId},now(),#{createUserId})
    </insert>

    <!--查询所有兴趣分类-->
    <select id="getInterestsType" resultType="com.wisewin.backend.entity.bo.InterestTypeBO" parameterType="java.lang.Integer">
        select * from ce_interest_type
        order by update_time desc
    </select>

    <!--删除兴趣分类-->
    <delete id="delInterestType">
        delete from ce_interest_type where id=#{id}
    </delete>

</mapper>